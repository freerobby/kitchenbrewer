<h1>Update your profile</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Email:" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label "Password:" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label "Confirm:" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Update Profile" %>
  </p>
<% end %>